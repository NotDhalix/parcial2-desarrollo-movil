<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPersonalizado">

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personalizar Menú"
                android:textSize="26sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tv15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proteina"
                android:textSize="20sp"
                android:padding="10dp"/>

            <LinearLayout
                android:id="@+id/protalitas"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="4dp"
                android:layout_margin="15dp">

                <ImageView
                    android:id="@+id/im3"
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/alitas" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv16"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Alitas (2 unidades)"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio: 0.50 B./"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/protsalchicha"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="4dp"
                android:layout_margin="15dp">>

                <ImageView
                    android:id="@+id/im4"
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/salchichas" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv18"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Salchicha guisada"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio: 0.50 B./"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/tv20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Carbohidrato"
                android:textSize="20sp"
                android:padding="10dp"/>

            <LinearLayout
                android:id="@+id/carbarroz"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="4dp"
                android:layout_margin="15dp">>

                <ImageView
                    android:id="@+id/im5"
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/arroz" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv21"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Arroz blanco"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio: 0.30 B./"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/carbpure"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="4dp"
                android:layout_margin="15dp">>

                <ImageView
                    android:id="@+id/im6"
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/pure" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv24"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Puré de papa"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio: 0.60 B./"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ensalada"
                android:textSize="20sp"
                android:padding="10dp"/>

            <LinearLayout
                android:id="@+id/ensaladapapa"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="4dp"
                android:layout_margin="15dp">>

                <ImageView
                    android:id="@+id/im7"
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ensalada" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv26"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Ensalada de papa"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio: 0.70 B./"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ensaladarepollo"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/border_background"
                android:padding="4dp"
                android:layout_margin="15dp">>

                <ImageView
                    android:id="@+id/im8"
                    android:layout_width="259dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ensaladarepollo" />

                <LinearLayout
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv28"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:text="Ensalada de repollo"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Precio: 0.40 B./"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnpedir"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Reservar"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnatras"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Volver atrás"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>